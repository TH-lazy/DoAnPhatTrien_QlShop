
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/PlayoutShared.cshtml";
}

@model List<GioHang>
@using WebShopQuanAo.Models;

<h2 style="color:aquamarine">Giỏ Hàng</h2>

<table class="table">
    <tr>
        <th>Mã</th>
        <th>Tên</th>
        <th>Ảnh</th>
        <th>Số Lượng</th>
        <th>Đơn Giá</th>
        <th>Thành Tiền</th>
        <th></th>
        <th><a href="@Url.Action("XoaAll","GioHang")">XÓA ALL</a></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td width="12%">@item.iMaSP</td>
            <td width="22%">@item.sTenSP</td>
            <td width="26%"><img src="~/Assets/image/Data_Images/Data_Images/@item.sAnhBia" alt="Alternate Text" style="width:50%;" /></td>

            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @masp = item.iMaSP }))
            {
                <td width="10%">
                    <input id="txtsl" type="number" name="txtsl" value="@item.iSoLuong" style="width:40px" />
                </td>
                <td width="12%">
                    @String.Format("{0:0,0}", @item.dDonGia)

                </td>
                <td width="12%">
                    @String.Format("{0:0,0}", @item.dThanhTien)

                </td>
                <td>
                    <a href="@Url.Action("XoaGioHang","GioHang", new { @msp = item.iMaSP })" class="btn btn-primary float-right">Delete</a>
                </td>
                <td>
                    <input id="Submit1" type="submit" value="Update" class="btn btn-primary float-right" />
                </td>
            }
        </tr>
    }
    <tr style="background-color:lightblue">

        <td colspan="2" style="color:blue; font-weight:bold;text-align:right;">Tổng cộng:</td>
        <td style="color:red;font-weight:bold;">@ViewBag.TongSoLuong</td>
        <td colspan="2" style="color:red;font-weight:bold;">Thành Tiền: @String.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>


        <td>
            <a href="@Url.Action("DatHang","GioHang")"><input id="Submit2" class="btn btn-primary float-right" type="submit" value="Thanh Toán" /></a>
        </td>
        <td></td>
        <td>
            <a href="@Url.Action("ShowSanPham","SanPham")">
                <input id="Submit3" class="btn btn-primary float-left" type="submit" value="Mua Tiếp" />
            </a>
        </td>
        <td></td>

    </tr>
</table>

